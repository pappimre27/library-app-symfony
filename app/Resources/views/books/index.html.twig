{% extends 'base.html.twig' %}

{% block title %}Books{% endblock %}

{% block body %}
    {% if books %}
        <table id="books" class="table">
            <thead>
            <tr>
                <th>ISBN</th>
                <th>Book Title</th>
                <th>Book Author</th>
                <th>Release year</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for book in books %}

                <tr>
                    <td>{{ book.isbn }}</td>
                    <td>{{ book.title }}</td>
                    <td>{{ book.author }}</td>
                    <td>{{ book.releaseYear }}</td>
                    <td>
                        <a href="#" class="btn btn-danger delete-book" data-id="{{ book.id }}"
                           onclick="alert({{ book.id }})">Delete</a>
                    </td>
                </tr>

            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No books to display</p>
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script src={{ asset('main.js') }}></script>

{% endblock %}


